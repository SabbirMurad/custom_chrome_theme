{
  "manifest_version": 3,
  "name": "Clock New Tab",
  "version": "1.0",
  "description": "Shows a clock in the center of the new tab page.",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs",
    "favicon"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "host_permissions": [
    "file://*/*"
  ]
}